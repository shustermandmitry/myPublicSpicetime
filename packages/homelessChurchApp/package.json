{
  "name": "homeless-church-app",
  "version": "1.0.0",
  "description": "Nonprofit platform app with Gatsby, TinaCMS, and Telegram integration",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:gatsby\" \"npm run dev:server\"",
    "dev:gatsby": "gatsby develop",
    "dev:server": "nodemon server/index.js",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src server --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src server --ext .js,.jsx,.ts,.tsx --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "node scripts/setup.js",
    "telegram:webhook": "node server/telegram/setup-webhook.js"
  },
  "dependencies": {
    "gatsby": "^5.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "gatsby-plugin-image": "^3.13.0",
    "gatsby-plugin-sharp": "^5.13.0",
    "gatsby-transformer-sharp": "^5.13.0",
    "gatsby-plugin-manifest": "^5.13.0",
    "gatsby-plugin-offline": "^6.13.0",
    "gatsby-plugin-react-helmet": "^6.13.0",
    "react-helmet": "^6.1.0",
    "tinacms": "^1.5.0",
    "@tinacms/cli": "^1.5.0",
    "tinacms-gitprovider-github": "^1.0.0",
    "express": "^4.18.0",
    "telegraf": "^4.16.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "axios": "^1.7.0",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^5.0.0",
    "node-cron": "^3.0.0",
    "multer": "^1.4.5",
    "sharp": "^0.33.0",
    "zod": "^3.22.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "typescript": "^5.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.0",
    "vitest": "^1.6.0",
    "@testing-library/react": "^14.3.0",
    "@testing-library/jest-dom": "^6.4.0",
    "concurrently": "^8.2.0",
    "nodemon": "^3.1.0"
  },
  "keywords": [
    "nonprofit",
    "church",
    "gatsby",
    "tinacms",
    "telegram",
    "accessibility",
    "cms"
  ],
  "author": "SpiceTime Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

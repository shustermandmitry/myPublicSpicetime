# =============================================================================
# HOMELESS CHURCH APP - ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# BASIC SITE CONFIGURATION
# -----------------------------------------------------------------------------
SITE_NAME="The Homeless Church"
SITE_URL="https://homelesschurch.org"
SITE_DESCRIPTION="A community of faith serving those in need"
ADMIN_EMAIL="admin@homelesschurch.org"

# -----------------------------------------------------------------------------
# TELEGRAM CONFIGURATION
# -----------------------------------------------------------------------------
# Get bot token from @BotFather
TELEGRAM_BOT_TOKEN="your_bot_token_here"

# Telegram channels for content management
TELEGRAM_CONTENT_CHANNEL="@homeless_church_content"
TELEGRAM_GALLERY_CHANNEL="@homeless_church_gallery"
TELEGRAM_EVENTS_CHANNEL="@homeless_church_events"
TELEGRAM_VOLUNTEERS_CHANNEL="@homeless_church_volunteers"

# Private channels for management
TELEGRAM_ADMIN_CHANNEL="@homeless_church_admin"
TELEGRAM_CRISIS_CHANNEL="@homeless_church_crisis"

# Webhook configuration
TELEGRAM_WEBHOOK_URL="https://your-domain.com/api/telegram/webhook"
TELEGRAM_WEBHOOK_SECRET="your_webhook_secret_here"

# Authorized users (comma-separated Telegram user IDs)
TELEGRAM_ADMIN_USERS="123456789,987654321"

# -----------------------------------------------------------------------------
# GITHUB INTEGRATION
# -----------------------------------------------------------------------------
# GitHub repository for content storage
GITHUB_OWNER="your-github-username"
GITHUB_REPO="homeless-church-content"
GITHUB_BRANCH="main"

# GitHub Personal Access Token with repo permissions
GITHUB_TOKEN="ghp_your_github_token_here"

# -----------------------------------------------------------------------------
# TINACMS CONFIGURATION
# -----------------------------------------------------------------------------
# TinaCMS Cloud (optional - for enhanced features)
TINA_CLIENT_ID="your_tina_client_id"
TINA_TOKEN="your_tina_token"

# Content branch for TinaCMS
TINA_BRANCH="main"

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# MongoDB connection string
MONGODB_URI="mongodb://localhost:27017/homeless-church"

# Redis for caching (optional)
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
# JWT secret for authentication
JWT_SECRET="your_jwt_secret_here_make_it_long_and_random"

# Session secret
SESSION_SECRET="your_session_secret_here"

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# DONATION SYSTEM
# -----------------------------------------------------------------------------
# Payment processor configuration
VENMO_USERNAME="@homeless-church"
CASHAPP_USERNAME="$HomelessChurch"
PAYPAL_EMAIL="donations@homelesschurch.org"

# Nonprofit tax ID for receipts
NONPROFIT_TAX_ID="12-3456789"
NONPROFIT_NAME="The Homeless Church Foundation"

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION
# -----------------------------------------------------------------------------
# SMTP settings for notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
NODE_ENV="development"
PORT=3000
GATSBY_PORT=8000

# Debug logging
DEBUG="homeless-church:*"

# -----------------------------------------------------------------------------
# PRODUCTION SETTINGS
# -----------------------------------------------------------------------------
# Set to 'production' for production deployment
# NODE_ENV="production"

# Production domain
# PRODUCTION_URL="https://homelesschurch.org"

# SSL certificate paths (if using custom SSL)
# SSL_CERT_PATH="/path/to/cert.pem"
# SSL_KEY_PATH="/path/to/key.pem"

# -----------------------------------------------------------------------------
# DOCKER CONFIGURATION
# -----------------------------------------------------------------------------
# Docker-specific settings
DOCKER_NETWORK="homeless-church-network"
DOCKER_VOLUME_PREFIX="homeless-church"

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS
# -----------------------------------------------------------------------------
# Google Analytics (optional)
GA_TRACKING_ID="G-XXXXXXXXXX"

# Sentry error tracking (optional)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# -----------------------------------------------------------------------------
# BACKUP CONFIGURATION
# -----------------------------------------------------------------------------
# Backup settings
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# S3 backup storage (optional)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_BUCKET_NAME="homeless-church-backups"
AWS_REGION="us-east-1"

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Enable/disable features
ENABLE_DONATIONS=true
ENABLE_VOLUNTEER_SIGNUP=true
ENABLE_EVENT_REGISTRATION=true
ENABLE_CRISIS_SUPPORT=true
ENABLE_MULTILINGUAL=false

# -----------------------------------------------------------------------------
# ACCESSIBILITY SETTINGS
# -----------------------------------------------------------------------------
# Accessibility features
ENABLE_HIGH_CONTRAST=true
ENABLE_SCREEN_READER_SUPPORT=true
ENABLE_KEYBOARD_NAVIGATION=true

# -----------------------------------------------------------------------------
# CONTENT MODERATION
# -----------------------------------------------------------------------------
# Auto-moderation settings
ENABLE_CONTENT_MODERATION=true
MODERATION_WEBHOOK_URL="https://your-domain.com/api/moderate"

# Profanity filter
ENABLE_PROFANITY_FILTER=true

# -----------------------------------------------------------------------------
# CACHE CONFIGURATION
# -----------------------------------------------------------------------------
# Cache settings
CACHE_TTL=3600  # 1 hour
STATIC_CACHE_TTL=86400  # 24 hours

# CDN configuration (optional)
CDN_URL="https://cdn.homelesschurch.org"

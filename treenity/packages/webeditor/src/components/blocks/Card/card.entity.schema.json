{
    "$id": "@treenity/webeditor:markup.card",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "width": {
            "$ref": "@treenity/webeditor:markup.card#/definitions/CardWidth",
            "default": "auto"
        },
        "elevation": {
            "$ref": "@treenity/webeditor:markup.card#/definitions/CardElevation",
            "default": "medium"
        },
        "styles": {
            "type": "object",
            "properties": {
                "size": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/SizeThemedValue"
                },
                "layout": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/LayoutThemedValue"
                },
                "position": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/PositionThemedValue"
                },
                "spacing": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/SpacingThemedValue"
                },
                "background": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BackgroundThemedValue"
                },
                "border": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BorderThemedValue"
                },
                "shadow": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/ShadowThemedValue"
                },
                "textEditor": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/Partial<TextPropsThemedValue>"
                }
            }
        }
    },
    "required": [
        "elevation",
        "styles",
        "width"
    ],
    "definitions": {
        "CardWidth": {
            "enum": [
                "100%",
                "auto",
                "max",
                "min"
            ],
            "type": "string"
        },
        "CardElevation": {
            "enum": [
                "high",
                "low",
                "medium"
            ],
            "type": "string"
        },
        "SizeThemedValue": {
            "type": "object",
            "properties": {
                "width": {
                    "type": "string"
                },
                "height": {
                    "type": "string"
                },
                "min_width": {
                    "type": "string"
                },
                "max_width": {
                    "type": "string"
                },
                "min_height": {
                    "type": "string"
                },
                "max_height": {
                    "type": "string"
                },
                "overflow": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/OverflowValue"
                }
            },
            "required": [
                "overflow"
            ]
        },
        "OverflowValue": {
            "enum": [
                "auto",
                "clip",
                "hidden",
                "scroll",
                "visible"
            ],
            "type": "string"
        },
        "LayoutThemedValue": {
            "type": "object",
            "properties": {
                "display": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/LayoutDisplayValueType"
                },
                "direction": {
                    "enum": [
                        "column",
                        "row"
                    ],
                    "type": "string"
                },
                "align": {
                    "enum": [
                        "center_center",
                        "center_end",
                        "center_start",
                        "center_stretch",
                        "left_center",
                        "left_end",
                        "left_start",
                        "left_stretch",
                        "right_center",
                        "right_end",
                        "right_start",
                        "right_stretch",
                        "space-around_center",
                        "space-around_end",
                        "space-around_start",
                        "space-around_stretch",
                        "space-between_center",
                        "space-between_end",
                        "space-between_start",
                        "space-between_stretch"
                    ],
                    "type": "string"
                },
                "gap": {
                    "type": "object",
                    "properties": {
                        "column": {
                            "type": "string"
                        },
                        "row": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "column",
                        "row"
                    ]
                },
                "order": {
                    "type": "string"
                },
                "gridSettings": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/IGridSettingsValue"
                },
                "columns": {
                    "enum": [
                        "center",
                        "end",
                        "space-around",
                        "space-between",
                        "start",
                        "stretch"
                    ],
                    "type": "string"
                },
                "rows": {
                    "enum": [
                        "center",
                        "end",
                        "space-around",
                        "space-between",
                        "start",
                        "stretch"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "display"
            ]
        },
        "LayoutDisplayValueType": {
            "enum": [
                "block",
                "flex",
                "grid",
                "none"
            ],
            "type": "string"
        },
        "IGridSettingsValue": {
            "type": "object",
            "properties": {
                "columns": {
                    "type": "array",
                    "items": {
                        "$ref": "@treenity/webeditor:markup.card#/definitions/IGridSettingsValueCR"
                    }
                },
                "rows": {
                    "type": "array",
                    "items": {
                        "$ref": "@treenity/webeditor:markup.card#/definitions/IGridSettingsValueCR"
                    }
                },
                "areas": {
                    "type": "array",
                    "items": {
                        "$ref": "@treenity/webeditor:markup.card#/definitions/IGridSettingsArea"
                    }
                }
            },
            "required": [
                "columns",
                "rows"
            ]
        },
        "IGridSettingsValueCR": {
            "type": "object",
            "properties": {
                "format": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/GridSettingsCRType"
                },
                "size": {
                    "anyOf": [
                        {
                            "type": "object",
                            "properties": {
                                "min": {
                                    "type": "string"
                                },
                                "max": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "max",
                                "min"
                            ]
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            },
            "required": [
                "format"
            ]
        },
        "GridSettingsCRType": {
            "enum": [
                "auto",
                "fixed",
                "min-max"
            ],
            "type": "string"
        },
        "IGridSettingsArea": {
            "type": "object",
            "properties": {
                "columns_start": {
                    "type": "number"
                },
                "columns_end": {
                    "type": "number"
                },
                "rows_start": {
                    "type": "number"
                },
                "rows_end": {
                    "type": "number"
                }
            },
            "required": [
                "columns_end",
                "columns_start",
                "rows_end",
                "rows_start"
            ]
        },
        "PositionThemedValue": {
            "type": "object",
            "properties": {
                "position": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/PositionThemedPositionValue"
                },
                "offset": {
                    "type": "object",
                    "properties": {
                        "top": {
                            "type": "string"
                        },
                        "right": {
                            "type": "string"
                        },
                        "bottom": {
                            "type": "string"
                        },
                        "left": {
                            "type": "string"
                        }
                    }
                },
                "relative": {
                    "type": "string"
                },
                "zIndex": {
                    "anyOf": [
                        {
                            "const": "auto",
                            "type": "string"
                        },
                        {
                            "type": "number"
                        }
                    ]
                }
            },
            "required": [
                "offset",
                "position"
            ]
        },
        "PositionThemedPositionValue": {
            "enum": [
                "absolute",
                "fixed",
                "relative",
                "static",
                "sticky"
            ],
            "type": "string"
        },
        "SpacingThemedValue": {
            "type": "object",
            "properties": {
                "margin": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/SpacingThemedValues"
                },
                "padding": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/SpacingThemedValues"
                }
            },
            "required": [
                "margin",
                "padding"
            ]
        },
        "SpacingThemedValues": {
            "type": "object",
            "properties": {
                "top": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/SpacingValue"
                },
                "bottom": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/SpacingValue"
                },
                "left": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/SpacingValue"
                },
                "right": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/SpacingValue"
                }
            }
        },
        "SpacingValue": {
            "type": "string"
        },
        "BackgroundThemedValue": {
            "type": "object",
            "properties": {
                "backgroundColor": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "backgroundSize": {
                    "enum": [
                        "auto",
                        "contain",
                        "cover"
                    ],
                    "type": "string"
                },
                "backgroundImage": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BgImageValue"
                },
                "backgroundGradient": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/GradientThemedValues"
                },
                "backgroundPosition": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BgPositionThemedValue"
                }
            },
            "required": [
                "backgroundColor",
                "backgroundSize"
            ]
        },
        "BgImageValue": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "key",
                "name"
            ]
        },
        "GradientThemedValues": {
            "type": "object",
            "properties": {
                "points": {
                    "type": "object",
                    "additionalProperties": false,
                    "patternProperties": {
                        "^[0-9]+$": {
                            "$ref": "@treenity/webeditor:markup.card#/definitions/IPoint"
                        }
                    }
                },
                "angle": {
                    "type": "number"
                }
            },
            "required": [
                "angle",
                "points"
            ]
        },
        "IPoint": {
            "type": "object",
            "properties": {
                "position": {
                    "type": "number"
                },
                "color": {
                    "type": [
                        "null",
                        "string"
                    ]
                }
            },
            "required": [
                "color",
                "position"
            ]
        },
        "BgPositionThemedValue": {
            "type": "object",
            "properties": {
                "positions": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BgPositionThemedPositionValue"
                },
                "repeat": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BgPositionThemedRepeatValue"
                },
                "image": {
                    "type": "string"
                }
            },
            "required": [
                "positions",
                "repeat"
            ]
        },
        "BgPositionThemedPositionValue": {
            "type": "object",
            "properties": {
                "x": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BgPositionThemedPositionXValue"
                },
                "y": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BgPositionThemedPositionYValue"
                }
            },
            "required": [
                "x",
                "y"
            ]
        },
        "BgPositionThemedPositionXValue": {
            "enum": [
                "center",
                "left",
                "right"
            ],
            "type": "string"
        },
        "BgPositionThemedPositionYValue": {
            "enum": [
                "bottom",
                "center",
                "top"
            ],
            "type": "string"
        },
        "BgPositionThemedRepeatValue": {
            "enum": [
                "no-repeat",
                "repeat",
                "repeat-x",
                "repeat-y"
            ],
            "type": "string"
        },
        "BorderThemedValue": {
            "type": "object",
            "properties": {
                "radius": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BorderRadiusValues"
                },
                "styles": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/Omit<BorderStyleValues,\"all\">"
                }
            },
            "required": [
                "radius",
                "styles"
            ]
        },
        "BorderRadiusValues": {
            "type": "object",
            "properties": {
                "topLeft": {
                    "type": "string"
                },
                "topRight": {
                    "type": "string"
                },
                "bottomLeft": {
                    "type": "string"
                },
                "bottomRight": {
                    "type": "string"
                }
            },
            "required": [
                "bottomLeft",
                "bottomRight",
                "topLeft",
                "topRight"
            ]
        },
        "Omit<BorderStyleValues,\"all\">": {
            "type": "object",
            "properties": {
                "left": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BorderStylesProps"
                },
                "right": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BorderStylesProps"
                },
                "bottom": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BorderStylesProps"
                },
                "top": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BorderStylesProps"
                }
            },
            "required": [
                "bottom",
                "left",
                "right",
                "top"
            ]
        },
        "BorderStylesProps": {
            "type": "object",
            "properties": {
                "width": {
                    "type": "string"
                },
                "color": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "style": {
                    "$ref": "@treenity/webeditor:markup.card#/definitions/BorderStyleName"
                }
            },
            "required": [
                "color",
                "style"
            ]
        },
        "BorderStyleName": {
            "enum": [
                "dashed",
                "dotted",
                "none",
                "solid"
            ],
            "type": "string"
        },
        "ShadowThemedValue": {
            "type": "object",
            "properties": {
                "x": {
                    "type": "string"
                },
                "y": {
                    "type": "string"
                },
                "blur": {
                    "type": "string"
                },
                "spread": {
                    "type": "string"
                },
                "color": {
                    "type": [
                        "null",
                        "string"
                    ]
                }
            }
        },
        "Partial<TextPropsThemedValue>": {
            "type": "object",
            "properties": {
                "align": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "color": {
                    "type": "string"
                },
                "fontFamily": {
                    "type": "string"
                },
                "fontWeight": {
                    "type": "string"
                },
                "size": {
                    "type": "string"
                },
                "opacity": {
                    "type": "string"
                },
                "lineHeight": {
                    "type": "string"
                },
                "letterSpacing": {
                    "type": "string"
                },
                "textTransform": {
                    "type": "string"
                },
                "textStyle": {
                    "enum": [
                        "italic",
                        "normal"
                    ],
                    "type": "string"
                },
                "textDecoration": {
                    "type": "string"
                },
                "textType": {
                    "type": "string"
                },
                "textList": {
                    "type": "string"
                }
            }
        }
    }
}


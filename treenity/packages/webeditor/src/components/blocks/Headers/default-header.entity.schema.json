{
    "$id": "@treenity/webeditor:layout.header",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "logo": {
            "$ref": "@treenity/webeditor:layout.header#/definitions/ILogoProps",
            "title": "Logo"
        },
        "menu": {
            "title": "Menu",
            "type": "array",
            "items": {
                "$ref": "@treenity/webeditor:layout.header#/definitions/IHeaderMenuProps"
            }
        },
        "social": {
            "title": "Social Links",
            "type": "array",
            "items": {
                "$ref": "@treenity/webeditor:layout.header#/definitions/ISocialList"
            }
        }
    },
    "required": [
        "logo",
        "menu",
        "social"
    ],
    "definitions": {
        "ILogoProps": {
            "title": "Logo",
            "type": "object",
            "properties": {
                "image": {
                    "title": "Image URL",
                    "type": "object",
                    "properties": {
                        "light": {
                            "widget": "treenity.imageUploadInput",
                            "type": "string"
                        },
                        "dark": {
                            "widget": "treenity.imageUploadInput",
                            "type": "string"
                        }
                    },
                    "required": [
                        "dark",
                        "light"
                    ]
                },
                "link": {
                    "title": "Link",
                    "widget": "treenity.selectLink",
                    "type": "string"
                }
            },
            "required": [
                "image",
                "link"
            ]
        },
        "IHeaderMenuProps": {
            "title": "Menu",
            "type": "object",
            "properties": {
                "label": {
                    "title": "Label",
                    "type": "string"
                },
                "link": {
                    "title": "Link",
                    "widget": "treenity.selectLink",
                    "type": "string"
                }
            },
            "required": [
                "label",
                "link"
            ]
        },
        "ISocialList": {
            "title": "Social",
            "default": {
                "logo": "/svg/logo.svg",
                "link": "https://treenity.pro"
            },
            "type": "object",
            "properties": {
                "logo": {
                    "title": "Logo",
                    "widget": "treenity.imageUploadInput",
                    "type": "string"
                },
                "link": {
                    "title": "Link",
                    "type": "string"
                }
            },
            "required": [
                "link",
                "logo"
            ]
        }
    }
}


{
    "$id": "@treenity/webeditor:advanced.collapse",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "list": {
            "title": "List",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "title": "Label",
                        "type": "string"
                    },
                    "children": {
                        "title": "Text",
                        "widget": "treenity.textarea",
                        "type": "string"
                    },
                    "active": {
                        "title": "Active",
                        "type": "boolean"
                    },
                    "showArrow": {
                        "title": "Show arrow",
                        "type": "boolean"
                    },
                    "extra": {
                        "title": "Icon",
                        "widget": "treenity.selectIcon"
                    }
                },
                "required": [
                    "children",
                    "label"
                ]
            }
        },
        "size": {
            "$ref": "@treenity/webeditor:advanced.collapse#/definitions/SizeType",
            "title": "Size"
        },
        "accordion": {
            "title": "Accordion",
            "type": "boolean"
        },
        "bordered": {
            "title": "Bordered",
            "type": "boolean"
        },
        "expandIconPosition": {
            "title": "Expand icon position",
            "enum": [
                "end",
                "start"
            ],
            "type": "string"
        },
        "ghost": {
            "title": "Ghost",
            "type": "boolean"
        },
        "collapsible": {
            "title": "Collapsible",
            "enum": [
                "disabled",
                "header",
                "icon"
            ],
            "type": "string"
        }
    },
    "required": [
        "list"
    ],
    "definitions": {
        "SizeType": {
            "enum": [
                "large",
                "middle",
                "small"
            ],
            "type": "string"
        }
    }
}


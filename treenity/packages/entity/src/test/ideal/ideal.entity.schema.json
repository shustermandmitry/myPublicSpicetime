{
    "$id": "@treenity/entity:ideal",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "here just write simple type name, it will be prefixed with package type\nschema will be named as `ideal.entity.schema.json`",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "health": {
            "widget": "textArea",
            "type": "number"
        },
        "age": {
            "format": "date-time",
            "type": "number"
        },
        "look": {
            "$ref": "@treenity/entity:ideal#/definitions/Look",
            "widget": "inner-value"
        }
    },
    "required": [
        "health",
        "look",
        "name"
    ],
    "definitions": {
        "Look": {
            "type": "object",
            "properties": {
                "hair": {
                    "type": "string"
                },
                "eyes": {
                    "type": "string"
                }
            },
            "required": [
                "eyes",
                "hair"
            ]
        }
    },
    "methods": {
        "changeAge": {
            "arguments": [
                {
                    "name": "newAge",
                    "type": "number"
                }
            ],
            "return": {
                "type": "undefined"
            }
        },
        "sendEmail": {
            "arguments": [
                {
                    "name": "param",
                    "type": "object",
                    "properties": {
                        "text": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "text"
                    ]
                }
            ],
            "return": {
                "type": "boolean"
            }
        }
    }
}


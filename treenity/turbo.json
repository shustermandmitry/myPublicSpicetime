{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false,
      "outputs": []
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "cluster:dev": {
      "dependsOn": ["build", "^cluster:dev"],
      "cache": false
    }
  }
}
